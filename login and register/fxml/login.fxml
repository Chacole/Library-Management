<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tuanq.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">
            <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="Email" maxWidth="200"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>
            <ComboBox fx:id="roleComboBox" promptText="Select Role" maxWidth="200">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Admin"/>
                        <String fx:value="User"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="Login" onAction="#handleLogin" maxWidth="200"/>
            <Hyperlink text="Don't have an account? Register" onAction="#switchToRegister"/>
        </VBox>
    </children>
</AnchorPane>