            <ImageView fitHeight="30" fitWidth="30">
                <Image url="@images/plus.png" />
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="buttonMinus" maxHeight="40" maxWidth="40" minHeight="40" minWidth="40" onAction="#handleButtonMinus" style="-fx-background-color: transparent; -fx-padding: 0;">
        <graphic>
            <ImageView fitHeight="30" fitWidth="30">
                <Image url="@images/minus.png" />
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="buttonUpdate" maxHeight="40" maxWidth="40" minHeight="40" minWidth="40" onAction="#handleButtonUpdate" style="-fx-background-color: transparent; -fx-padding: 0;">
        <graphic>
            <ImageView fitHeight="30" fitWidth="30">
                <Image url="@images/update.png" />
            </ImageView>
        </graphic>
    </Button>
