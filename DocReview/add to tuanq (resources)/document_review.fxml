<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import org.controlsfx.control.Rating?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.testing.DocumentReviewController"
            prefHeight="500.0" prefWidth="380.0">
    <children>
        <!-- Ảnh QR -->
        <ImageView fx:id="imageView" layoutX="90.0" layoutY="10.0" fitWidth="210.0" fitHeight="210.0"
                   preserveRatio="true" smooth="true">
            <image>
                <Image url="@qr/qr.png"/>
            </image>
        </ImageView>

        <!-- Đánh giá là bình luận -->
        <Rating fx:id="rating" layoutX="110.0" layoutY="135.0"/>
        <Label fx:id="msg" layoutX="170.0" layoutY="168.0" prefHeight="15.0" prefWidth="100.0"/>
        <TextArea fx:id="commentArea" layoutX="10.0" layoutY="186.0" prefWidth="360.0" prefHeight="80.0" promptText="Viết bình luận"/>
        <Button text="Gửi Đánh Giá" layoutX="145.0" layoutY="272.0" onAction="#handleSubmit"/>

        <!-- Bảng hiển thị các đánh giá -->
        <TableView fx:id="tableView" layoutX="10.0" layoutY="300.0" prefWidth="360.0" prefHeight="200.0">
            <columns>
                <TableColumn fx:id="usernameColumn" text="UserName" prefWidth="100.0" />
                <TableColumn fx:id="commentColumn" text="Comment" prefWidth="260.0" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
