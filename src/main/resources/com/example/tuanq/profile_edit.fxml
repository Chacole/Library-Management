<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tuanq.customer.ProfileEditController">

    <VBox alignment="CENTER" spacing="10" prefWidth="300" prefHeight="300">
        <Label text="Edit" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <TextField fx:id="nameField" promptText="Name" maxWidth="200"/>
        <TextField fx:id="emailField" promptText="Email" maxWidth="200"/>
        <TextField fx:id="addressField" promptText="Address" maxWidth="200"/>
        <TextField fx:id="phoneField" promptText="Phone" maxWidth="200"/>
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>
        <Button text="Confirm" onAction="#handleConfirm"  maxWidth="100"/>
        <Button text="Cancel" onAction="#handleCancel"  maxWidth="100"/>
    </VBox>

</AnchorPane>