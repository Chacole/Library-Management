<HBox alignment="CENTER" prefHeight="40.0" prefWidth="1058.5" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tuanq.toolsUsers">
    <Button fx:id="buttonPlus" maxHeight="40" maxWidth="40" minHeight="40" minWidth="40" onAction="#handleButtonPlus" style="-fx-background-color: transparent; -fx-padding: 0;">
