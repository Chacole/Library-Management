<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tuanq.RegisterController">
    <children>
        <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">
            <Label text="Register" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <TextField fx:id="nameField" promptText="Name" maxWidth="200"/>
            <TextField fx:id="emailField" promptText="Email" maxWidth="200"/>
            <TextField fx:id="addressField" promptText="Address" maxWidth="200"/>
            <TextField fx:id="phoneField" promptText="Phone" maxWidth="200"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" maxWidth="200"/>
            <Button text="Register" onAction="#handleRegister"  maxWidth="200"/>
            <Hyperlink text="Already have an account? Login" onAction="#switchToLogin"/>
        </VBox>
    </children>
</AnchorPane>