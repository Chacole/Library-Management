<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tuanq.customer.Displaydocuments">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
            <Button fx:id="buttonResearch" onAction="#handleButtonResearch" maxHeight="40" maxWidth="40" minHeight="40" minWidth="40" style="-fx-background-color: transparent; -fx-padding: 0;">
                <graphic>
                    <ImageView fitHeight="30" fitWidth="30">
                        <Image url="@../../../../images/research.png" />
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>
    <center>
        <ListView fx:id="listView" prefHeight="700.0"/>
    </center>
    <bottom>
        <HBox fx:id="buttonBox" spacing="10" alignment="CENTER" />
    </bottom>
</BorderPane>