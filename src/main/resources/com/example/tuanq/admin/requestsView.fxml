<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="TOP_LEFT"
      fx:controller="com.example.tuanq.admin.HandleRequest">
    <children>
        <!-- TableView để hiển thị danh sách yêu cầu -->
        <TableView fx:id="requestTable" prefHeight="600.0" prefWidth="800.0">
            <columns>
                <!-- Cột hiển thị tên người dùng -->
                <TableColumn fx:id="userNameColumn" text="User Name" prefWidth="200.0" />

                <!-- Cột hiển thị tên tài liệu -->
                <TableColumn fx:id="documentTitleColumn" text="Document Title" prefWidth="200.0" />

                <!-- Cột hiển thị trạng thái -->
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="150.0" />

                <!-- Cột hiển thị nút Confirm -->
                <TableColumn fx:id="actionColumn" text="Action" prefWidth="150.0" />
            </columns>
        </TableView>
    </children>
</VBox>